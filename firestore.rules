rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for 'schedule' collection
    match /schedule/{scheduleId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for 'ToDo_Item' collection
    match /ToDo_Item/{itemId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for 'transactions' collection - SIMPLIFIED FOR DEBUGGING
    match /transactions/{transactionId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

        // TEMPORARY RULE: Allow any authenticated user to read.
        // The client-side query is still filtering by userId.
        allow read: if request.auth != null;

        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}